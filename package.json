{
  "name": "sentinel-browser",
  "version": "1.0.0",
  "description": "AI-powered browser automation agent with self-healing capabilities",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sentinel": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "lint": "tsc --noEmit",
    "eval": "bun run src/index.ts eval"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.35.0",
    "@langchain/langgraph": "^0.2.36",
    "commander": "^12.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.50.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "browser-automation",
    "ai-agent",
    "self-healing",
    "langgraph",
    "playwright",
    "web-scraping"
  ],
  "author": "Adam",
  "license": "MIT"
}
